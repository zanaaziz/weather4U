<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">
            <%- loc %><!-- Location Name -->
            
            <form id="<%- current_location_id %>" class="pull-right" style="margin-left: 5px;" method="post" action="/locations/delete/<%- current_location %>">
                <span class="glyphicon glyphicon-remove-sign" aria-hidden="true" onclick="document.getElementById('<%- current_location_id %>').submit()" style="cursor:pointer"></span>
            </form>
            
            <form id="<%- current_location_id_edit %>" class="pull-right" method="get" action="/locations/edit/<%- current_location %>">
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true" onclick="document.getElementById('<%- current_location_id_edit %>').submit()" style="cursor:pointer"></span>
            </form>
        </h4>
    </div>
    
    <div class="panel-body">
        <% for(var day in locations[loc]){ %>
            <% if(day < 8){ %>
                <% if(day == 0){ %>
                    <h5>Today: <%- locations[loc][day].date %></h5><!-- Day: Date -->
                <% }else{ %>
                    <h5><%- locations[loc][day].day %>: <%- locations[loc][day].date %></h5><!-- Day: Date -->
                <% } %>
                
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td>Conditions: </td>
                            <td class="align-right"><%- locations[loc][day].condition %></td>
                        </tr>
                        <tr>
                            <td>High: </td>
                            <td class="align-right"><%- locations[loc][day].high %>&deg</td>
                        </tr>
                        <tr>
                            <td>Low: </td>
                            <td class="align-right"><%- locations[loc][day].low %>&deg</td>
                        </tr>
                        
                        <% if(day == 0){ %>
                            <tr>
                                <td>Humidity: </td>
                                <td class="align-right"><%- locations[loc][day].humidity %>%</td>
                            </tr>
                            <tr>
                                <td>Wind Speed: </td>
                                <td class="align-right"><%- locations[loc][day].windspeed %> km/h</td>
                            </tr>
                            <tr>
                                <td>Visibility: </td>
                                <td class="align-right"><%- locations[loc][day].visibility %> km</td>
                            </tr>
                            <tr>
                                <td>Sunrise: </td>
                                <td class="align-right"><%- locations[loc][day].sunrise %></td>
                            </tr>
                            <tr>
                                <td>Sunset: </td>
                                <td class="align-right"><%- locations[loc][day].sunset %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            <% } %>
        <% } %><!-- /for days -->
    </div>
</div>