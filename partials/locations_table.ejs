<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <%- loc %><!-- Location Name -->
            
            <form id="<%- current_location_id %>" class="pull-right" name="del" method="post" action="/locations/delete/<%- current_location %>">
                <span class="glyphicon glyphicon-remove" id="del" aria-hidden="true" onclick="document.getElementById('<%- current_location_id %>').submit()"></span>
            </form>
        </h3>
    </div>
    
    <% for(var day in locations[loc]){ %>
        <% if(day < 8){ %>
            <div class="panel-body">
                <% if(day == 0){ %>
                    <div class="panel-heading">
                        <h3 class="panel-title">Today: <%- locations[loc][day].date %></h3><!-- Day: Date -->
                    </div>
                <% }else{ %>
                    <div class="panel-heading">
                        <h3 class="panel-title"><%- locations[loc][day].day %>: <%- locations[loc][day].date %></h3><!-- Day: Date -->
                    </div>
                <% } %>
                
                <div class="panel-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Conditions: </td>
                                <td class="align-right"><%- locations[loc][day].condition %></td>
                            </tr>
                            <tr>
                                <td>High: </td>
                                <td class="align-right"><%- locations[loc][day].high %>&deg</td>
                            </tr>
                            <tr>
                                <td>Low: </td>
                                <td class="align-right"><%- locations[loc][day].low %>&deg</td>
                            </tr>
                            
                            <% if(day == 0){ %>
                                <tr>
                                    <td>Humidity: </td>
                                    <td class="align-right"><%- locations[loc][day].humidity %>%</td>
                                </tr>
                                <tr>
                                    <td>Wind Speed: </td>
                                    <td class="align-right"><%- locations[loc][day].windspeed %> km/h</td>
                                </tr>
                                <tr>
                                    <td>Visibility: </td>
                                    <td class="align-right"><%- locations[loc][day].visibility %> km</td>
                                </tr>
                                <tr>
                                    <td>Sunrise: </td>
                                    <td class="align-right"><%- locations[loc][day].sunrise %></td>
                                </tr>
                                <tr>
                                    <td>Sunset: </td>
                                    <td class="align-right"><%- locations[loc][day].sunset %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        <% } %>
    <% } %><!-- /for days -->
</div>